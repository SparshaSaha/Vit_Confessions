<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fourthstatelab.confession.Activities.SearchAndSend">

    <EditText
        android:id="@+id/searchbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:layout_toStartOf="@+id/searchbutton"
        android:ems="10"
        android:hint="Enter email, reg no or name"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/searchbox"
        android:layout_marginEnd="25dp"
        android:elevation="18dp"
        android:text="Search"/>

    <ListView
        android:id="@+id/serachlistview"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/searchbox"
        android:layout_below="@+id/searchbutton"
        android:layout_toStartOf="@+id/searchbutton"/>

    <EditText
        android:id="@+id/sendtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/serachlistview"
        android:layout_alignStart="@+id/serachlistview"
        android:layout_below="@+id/serachlistview"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter message to send"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sendtext"
        android:layout_below="@+id/sendtext"
        android:layout_marginEnd="73dp"
        android:layout_marginTop="35dp"
        android:elevation="24dp"
        android:text="Send"/>
</RelativeLayout>
